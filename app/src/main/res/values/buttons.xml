<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="StackOverflow.CommonButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <!-- Начиная с 21 -->
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
    </style>
    <style name="StackOverflow.CommonButton.PrimaryButton" parent="StackOverflow.CommonButton">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>